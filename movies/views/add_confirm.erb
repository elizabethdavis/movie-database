<!-- Prints out the confirmation of what was added to the database -->

<html>
    <head>
        <title>Adding to the Database</title>
        <link href="/style.css" rel="stylesheet"> 
    </head>
<body>

<form action="/" method="GET">
    <input type="submit" value="<< Return to main" />
</form>

<h3> Movies Found! </h3>

<p>
	<form action="/add/" method="GET">
	<!-- pass the id to identify which movie to add -->
	<% @all_movies.each do |movie| %>
		Movie Title: <%= movie.Title %> </br>
		Year: <%= movie.Year %> </br>
		Rated: <%= movie.Rated %> </br>
		Genre: <%= movie.Genre %> </br>
		Rotten Tomato Rating: <%= movie.tomatoRating %> </br>
		Actors: <%= movie.Actors %> </br>
		Plot: <%= movie.Plot %> </br>
		<%= @movie_index %> </br>
		<!-- need to get the number that it is listed (0..9) -->
		<input type="submit" value="Add to my movies" id='id'/> </br>
		------------------------------------------------------------------------------------------------------------ </br>
	<% end %>
	</form>
</p>

</body>
</html>