<!-- Prints out the confirmation of what was added to the database -->

<html>
    <head>
        <title>Adding to the Database</title>
        <link rel="stylesheet" type="text/css" href="styles/style.css">
    </head>
<body>

<form action="/" method="GET">
    <input type="submit" value="Return to main" />
</form>

<h3> Movies Found! </h3>

<p>
<!-- use the id number to create a link to click on -->
<% @all_movies.each do |movie| %>
	Movie Title: <%= movie.Title %> </br>
	Year: <%= movie.Year %> </br>
	Rotten Tomato Rating: <%= movie.tomatoRating %> </br>
	------------------------------------------------------ </br>
	<% end %>

</p>

<form action="/add/" method="POST">
	
    <input type="submit" value="Add to my movies">
</form>

</body>
</html>